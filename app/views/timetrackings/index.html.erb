<p id="notice"><%= notice %></p>

<h1>Timetrackings</h1>

<div class="float-right pb-1 pr-1">
  <%= link_to 'New Timetracking', new_timetracking_path, class: "btn btn-primary" %>
</div>

<table class="table-hover table table-striped">
  <thead>
    <tr>
      <th style="width: 10%">Date</th>
      <th style="width: 10%">Time</th>
      <th style="width: 30%">Collaborator</th>
      <th style="width: 30%">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timetrackings.each do |timetracking| %>
    <tr>
      <td><%= timetracking.created_at.strftime("%d/%m/%Y") %></td>
      <td><%= timetracking.created_at.strftime("%H:%M") %></td>
      <td><%= timetracking.collaborator.name %></td>
      <td><%= timetracking.description %></td>
      <td><%= link_to 'Show', timetracking %></td>
      <td><%= link_to 'Edit', edit_timetracking_path(timetracking) %></td>
      <td><%= link_to 'Destroy', timetracking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
