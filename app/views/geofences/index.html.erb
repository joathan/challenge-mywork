<%= notice %>

<h1>Geofences</h1>

<div class="float-right pb-1 pr-1">
  <%= link_to 'New Geofence', new_geofence_path, class: "btn btn-primary" %>
</div>

<table class="table-hover table table-striped">
  <thead>
    <tr>
      <th style="width: 20%">Description</th>
      <th style="width: 20%">Lat</th>
      <th style="width: 20%">Lng</th>
      <th style="width: 20%">Radius</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @geofences.each do |geofence| %>
    <tr>
      <td><%= geofence.description %></td>
      <td><%= geofence.lat %></td>
      <td><%= geofence.lng %></td>
      <td><%= geofence.radius %></td>
      <td><%= link_to 'Show', geofence %></td>
      <td><%= link_to 'Edit', edit_geofence_path(geofence) %></td>
      <td><%= link_to 'Destroy', geofence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
