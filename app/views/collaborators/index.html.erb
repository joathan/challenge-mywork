<%= notice %>

<h1>Collaborators</h1>

<div class="float-right pb-1 pr-1">
  <%= link_to 'New Collaborator', new_collaborator_path, class: "btn btn-primary" %>
</div>

<table class="table-hover table table-striped">
  <thead>
    <tr>
      <th style="width: 80%">Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @collaborators.each do |collaborator| %>
    <tr>
      <td><%= collaborator.name %></td>
      <td><%= link_to 'Show', collaborator %></td>
      <td><%= link_to 'Edit', edit_collaborator_path(collaborator) %></td>
      <td><%= link_to 'Destroy', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
